        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/orders">History</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/export">Export</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <main class="container" mt="5"><%- include('./partials/flash')%></main>
    <form
      class="row g-3 needs-validation formbodys"
      method="post"
      action="/customers"
      autocomplete="off"
      novalidate
    >
      <div class="col-md-12">
        <input
          type="text"
          class="form-control"
          id="validationCustom01"
          placeholder="Company Name"
          name="cname"
          value="<%= data[0].id  %>"
          required
          disabled
        />
        <div class="invalid-feedback">Please fill the Company Name.</div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <%= console.log(data[0].id) %>
      <div class="col-md-12">
        <input
          type="text"
          class="form-control"
          name="onwer"
          id="validationCustom02"
          value="<%= data[0].username  %>"
          disabled
          required
        />
        <div class="invalid-feedback">Please fill the Onwer.</div>

        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="col-md-12">
        <div class="input-group has-validation">
          <input
            type="text"
            class="form-control"
            placeholder="Item"
            name="item"
            id="validationCustomUsername"
            aria-describedby="inputGroupPrepend"
            required
          />
          <div class="invalid-feedback">Please fill the Item Field.</div>
        </div>
      </div>
      <div class="col-md-12">
        <input
          type=""
          class="form-control"
          placeholder="Weight"
          name="weight"
          id="validationCustom05"
          step="any"
          required
        />
        <div class="invalid-feedback">Please provide a proper Weight.</div>
      </div>
      <div class="col-md-12">
        <input
          type="date"
          class="form-control"
          placeholder="Order Date"
          name="odate"
          id="validationCustom05"
          required
        />
        <div class="invalid-feedback">Please provide a Order Date.</div>
      </div>

      <div class="col-md-12">
        <input
          type="number"
          class="form-control"
          name="count"
          placeholder="Box Count"
          id="validationCustom05"
          required
        />
        <div class="invalid-feedback">Please provide the Count.</div>
      </div>
      <div class="col-md-12">
        <textarea
          name="request"
          class="form-control"
          id="validationCustom05"
          cols="125"
          rows="5"
          placeholder="Request for Shipment"
          required
        ></textarea>
        <div class="invalid-feedback">Please fill request detail.</div>
      </div>
      <%= console.log(data); %>
      <div class="d-grid gap-2">
        <button class="btn btn-success" type="submit">Submit form</button>
      </div>
    </form>
  </body>
  <script>
    if (window.history.replaceState) {
      window.history.replaceState(null, null, window.location.href);
    }
    (function () {
      "use strict";

      var forms = document.querySelectorAll(".needs-validation");

      Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener(
          "submit",
          function (event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }

            form.classList.add("was-validated");
          },
          false
        );
      });
    })();
  </script>
</html>
